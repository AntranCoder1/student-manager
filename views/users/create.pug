extends ../layouts/layout.pug

block content
    h1.mt-3 Create Users 

    if  errors 
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="post")
        .form-group
            label(for="name") Name 
            input#name.form-control(type="text", name="name", placeholder="name", value=values ? values.name : "") 

        .form-group 
            label(for="phone") Phone 
            input#phone.form-control(type="text", name="phone", placeholder="phone", value=values ? values.phone : "") 
            
        button.btn.btn-primary Create