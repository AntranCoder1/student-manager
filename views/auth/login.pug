extends ../layouts/layout.pug

block content
    h1.mt-3 Create Users 

    if  errors 
        each error in errors
            .alert.alert-danger= error

    form(method="post")
        .form-group
            label(for="username") username 
            input#username.form-control(type="text", name="username", placeholder="username", value=values ? values.username : "") 

        .form-group 
            label(for="password") password 
            input#password.form-control(type="text", name="password", placeholder="password", value=values ? values.password : "") 
            
        button.btn.btn-primary Login