extends ../layouts/layout.pug

block content
    h1.mt-3 Sign Up

    if  errors 
        each error in errors
            .alert.alert-danger= error

    form(method="post")
        .form-group
            label(for="username") username 
            input#username.form-control(type="text", name="username", placeholder="username", value=values ? values.username : "") 

        .form-group 
            label(for="password") password 
            input#password.form-control(type="text", name="password", placeholder="password", value=values ? values.password : "") 

        .form-group 
            label(for="name") Name 
            input#name.form-control(type="text", name="name", placeholder="name", value=values ? values.name : "")

        .form-group 
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone", placeholder="phone", value=values ? values.phone : "")  
            
        button.btn.btn-primary Register

        